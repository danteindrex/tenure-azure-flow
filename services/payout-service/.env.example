# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# Server Configuration
PORT=3002
NODE_ENV=development

# Business Rules
BUSINESS_LAUNCH_DATE=2024-01-01
PAYOUT_THRESHOLD=100000
REWARD_PER_WINNER=100000
RETENTION_FEE=300

# Authentication (Better Auth)
JWT_SECRET=your-jwt-secret-here
JWT_EXPIRY=7d
SESSION_SECRET=your-session-secret-here

# Email Service Configuration
# SMTP settings for sending emails via Gmail or other SMTP providers
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_SECURE=false
SMTP_TLS=true
EMAIL_FROM=your-email@gmail.com
EMAIL_FROM_NAME=Home Solutions

# Alternative: SendGrid (if not using SMTP)
# EMAIL_PROVIDER=sendgrid
# SENDGRID_API_KEY=your-sendgrid-api-key

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Monitoring & Logging
LOG_LEVEL=info
ENABLE_METRICS=true
SENTRY_DSN=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_ADMIN_MAX_REQUESTS=1000

# Cron Jobs
ENABLE_CRON_JOBS=true
ELIGIBILITY_CHECK_CRON=0 2 * * *
MEMBERSHIP_REMOVAL_CRON=0 3 * * *

# External Services
SUBSCRIPTION_SERVICE_URL=http://localhost:3001
MAIN_APP_URL=http://localhost:3000

# PDF Generation
PDF_STORAGE_PATH=/tmp/payout-pdfs
PDF_BASE_URL=https://yourdomain.com/pdfs

# Tax Compliance
BACKUP_WITHHOLDING_RATE=0.24
TAX_REPORTING_THRESHOLD=600
